{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pc-monitor",
  "version": "0.1.0",
  "identifier": "com.yzh.pc-monitor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "pc-monitor",
        "width": 1100,
        "height": 700,
        "minWidth": 1100,
        "minHeight": 650,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "templates"
    ]
  }
}
